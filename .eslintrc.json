{
  // babel-eslint is used to eslint accept
  // new ES features
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
      "react",
      "jsx-a11y",
      "import"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true,
    "jest": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "next.config.js"
      }
    }
  },
  "rules" : {
    "react/jsx-filename-extension": 0
  },
  "globals": {
    "STATIC_URL": true,
    "__DEV__": true
  }
}